<p id="notice"><%= notice %></p>

<h1>Assignments</h1>

<table>
  <thead>
    <tr>

      <th>Course Id</th>
      <th>Assignment ID</th>
      <th>Assignment Name</th>
      <th>Submission Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.course_id %></td>
        <td><%= assignment.id %></td>
        <td><%= assignment.assignment_name %></td>
        <td><%= assignment.submission_status %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Submit Assignment', edit_assignment_path(assignment) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_assignment_path %>
