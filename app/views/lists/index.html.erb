<p id="notice"><%= notice %></p>

<h1>Course Lists</h1>

<table>
  <thead>
    <tr>
      <th>Student Id</th>
      <th>Course Id</th>
      <th>Course name</th>
      <th colspan="3">Actions</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.student_id %></td>
        <td><%= list.course_id %></td>
        <td><%= list.course_name %></td>
        <td><%= link_to 'View Assignments', {:controller => 'assignments', :course_id => list.course_id}%></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

